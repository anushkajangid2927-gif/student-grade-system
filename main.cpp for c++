#include <iostream>
using namespace std;

int main() {
    string name;
    int marks;

    cout << "Enter student name: ";
    getline(cin, name);

    cout << "Enter marks (0-100): ";
    cin >> marks;

    char grade;

    if (marks >= 90) {
        grade = 'A';
    } else if (marks >= 75) {
        grade = 'B';
    } else if (marks >= 60) {
        grade = 'C';
    } else if (marks >= 40) {
        grade = 'D';
    } else {
        grade = 'F';
    }

    cout << "\n--- Student Report ---\n";
    cout << "Name  : " << name << endl;
    cout << "Marks : " << marks << endl;
    cout << "Grade : " << grade << endl;

    return 0;
}
